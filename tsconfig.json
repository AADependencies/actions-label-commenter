{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
  },
  "exclude": ["node_modules", "**/*.test.ts", "dist", "dist_release"]
}
